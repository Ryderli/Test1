<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"></com.daimajia.slider.library.SliderLayout>


            <LinearLayout
                android:background="#F08080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/w1"
                        android:id="@+id/image_bt01"
                        android:layout_width="68dp"
                        android:layout_height="68dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:text="景点"
                        android:id="@+id/text01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/w2"
                        android:id="@+id/image_bt02"
                        android:layout_width="68dp"
                        android:layout_height="68dp"  />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:text="农家乐"
                        android:id="@+id/text02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/w3"
                        android:id="@+id/image_bt03"
                        android:layout_width="68dp"
                        android:layout_height="68dp"  />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:text="美食"
                        android:id="@+id/text03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/w4"
                        android:id="@+id/image_bt04"
                        android:layout_width="68dp"
                        android:layout_height="68dp"  />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:text="酒店"
                        android:id="@+id/text04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:padding="3dp"
                android:text="热门景点"
                android:textColor="#ffffff"
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--列表显示-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#F08080">
        <LinearLayout
            android:paddingLeft="70dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <SearchView

                android:id="@+id/searchView"
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:iconifiedByDefault="false"
                android:background="@drawable/seach_css"
                android:queryHint="请输入您要查找的内容"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <!-- TODO: Update blank fragment layout -->


</LinearLayout>
